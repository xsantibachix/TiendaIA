 <h1>Iniciar Sesión</h1>
<div class="login-form-container">
 
  <%= form_with url: login_path, local: true do |form| %>
    <div class="login-form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "login-form-control" %>
      <% if flash[:alert].present? %>
        <div class="login-error-message">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
    <div class="login-form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "login-form-control" %>
      <% if flash[:error].present? %>
        <div class="login-error-message">
          <%= flash[:error] %>
        </div>
      <% end %>
    </div>
    <div>
      <%= form.submit "Iniciar Sesión", class: "login-btn-submit" %>
    </div>
  <% end %>
  <%= link_to 'Crear Cuenta', registro_path, class: "login-btn-link" %>
</div>
