<!DOCTYPE html>
<html>
  <head>
    <title>TiendaIa</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

  </head>

  <body>
    <header>
      <%= render 'layouts/header' %>
    </header>

    <div class="container">
      <% flash.each do |key, message| %>
        <% if key == "alert" %>
          <div id="alertModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <p><%= message %></p>
            </div>
          </div>
        <% elsif key == "notice" %>
          <div class="flash <%= key %>" id="flashNotice"><%= message %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>

    <footer>
      <%= render 'layouts/footer' %>
    </footer>





















    <script>
  // Modal functionality
  var modal = document.getElementById("alertModal"); // Obtiene el elemento modal por su ID
  var span = document.getElementsByClassName("close")[0]; // Obtiene el primer elemento con la clase "close"

  // Comprueba si el modal existe
  if (modal) {
    modal.style.display = "block"; // Muestra el modal estableciendo su estilo de display a "block"

    // Añade un manejador de eventos al span (botón de cierre)
    span.onclick = function() {
      modal.style.display = "none"; // Oculta el modal cuando se hace clic en el botón de cierre
    }

    // Añade un manejador de eventos al objeto window
    window.onclick = function(event) {
      // Comprueba si el clic fue fuera del modal
      if (event.target == modal) {
        modal.style.display = "none"; // Oculta el modal si se hace clic fuera de él
      }
    }
  }

  // Notice functionality
  var flashNotice = document.getElementById("flashNotice"); // Obtiene el elemento de aviso por su ID

  // Comprueba si el aviso existe
  if (flashNotice) {
    flashNotice.style.display = "block"; // Muestra el aviso estableciendo su estilo de display a "block"
    setTimeout(function() {
      flashNotice.style.display = "none"; // Oculta el aviso después de 5 segundos
    }, 5000); // 5000 milisegundos = 5 segundos
  }
</script>

  </body>
</html>
